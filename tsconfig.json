{
  "compilerOptions": {
    "module": "ES6", 
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
  },
  "ts-node": {
      "esm": true
  },
  "lib": ["esnext"]
}